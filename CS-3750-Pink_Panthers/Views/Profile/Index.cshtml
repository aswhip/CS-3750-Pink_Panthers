@model Pink_Panthers_Project.Models.CourseView

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<h1>Hello, @Html.DisplayFor(Model => Model.Account!.FirstName) @Html.DisplayFor(Model => Model.Account!.LastName)</h1>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-8">
                <div class="row">
                    @if (Model != null && Model.Account!.isTeacher)
                    {

                        <!-- Display courses for teachers -->

                        @foreach (var course in Model.TeachingCourses!)
                        {

                            <div class="col-md-1" style="margin-right: 240px; margin-bottom: 15px">
                                <a class="no-decoration" asp-controller="Class" asp-action="Assignments" asp-route-id="@course.ID">
                                    <div class="card custom-card">
                                        <div class="card-header" style="background-color: @course.color;">@course.CourseNumber</div>
                                        <div class="card-body">
                                            @course.CourseName<br />
                                            @course.Room<br />
                                            @course.StartTime.ToString("hh:mm tt") - @course.EndTime.ToString("hh:mm tt")<br />
                                            @course.Days
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else if (Model != null && !Model.Account!.isTeacher)
                    {
                        <!-- Display courses for students -->
                        @foreach (var course in Model.RegisteredCourses!)
                        {
                            <div class="col-md-1" style="margin-right: 240px; margin-bottom: 15px">
                                <a class="no-decoration" asp-controller="Class" asp-action="Assignments" asp-route-id="@course.ID">
                                    <div class="card custom-card">
                                        <div class="card-header" style="background-color: @course.color;">@course.CourseNumber</div>
                                        <div class="card-body">
                                            @course.CourseName<br />
                                            @course.tName<br />
                                            @course.Room<br />
                                            @course.StartTime.ToString("hh:mm tt") - @course.EndTime.ToString("hh:mm tt")<br />
                                            @course.Days
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
            @if (Model != null && !Model.Account!.isTeacher)
            {
                <div class="col-md-4">
                    <div class="to-do-list">
                        <div class="to-do-header">To-Do List</div>
                        @foreach (var assignment in Model.Assignments!)
                        {
                            <a class="no-decoration" asp-controller="Class" asp-action="ToDoListClick" asp-route-assignmentID="@assignment.Id">
                                <div class="clickable to-do-card">
                                    <div class="">
                                        <b>@assignment.className</b><br />
                                        Assignment: @assignment.AssignmentName<br />
                                        Due: @assignment.DueDate
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
            @if (Model != null)
            {
                <div class="col-md-3">
                    <div class="notifications">
                        <div class="notification_header">
                            <b>Notifications</b>
                            <div class="exit_button clickable">x</div>
                        </div>
                        <div class="notification">
                            <b>CS 3550</b><br />
                            <b>Assignment 1</b><br />
                            <b>Graded</b><br />
                            <b>10/4/2023 10:45 AM</b>
                        </div>
                        <div class="notification">
                            <b>CS 1400</b><br />
                            <b>Assignment 2</b><br />
                            <b>Created</b><br />
                            <b>10/3/2023 9:45 AM</b>
                        </div>
                        <div class="notification">
                            <b>CS 1400</b><br />
                            <b>Quiz 1</b><br />
                            <b>Graded</b><br />
                            <b>9/30/2023 3:00 PM</b>
                        </div>
                        <div class="notification">
                            <b>CS 1400</b><br />
                            <b>Quiz 1</b><br />
                            <b>Created</b><br />
                            <b>9/27/2023 12:00 AM</b>
                        </div>
                        <div class="notification">
                            <b>CS 3550</b><br />
                            <b>Assignment 1</b><br />
                            <b>Created</b><br />
                            <b>9/25/2023 10:00 AM</b>
                        </div>

                    </div>
                </div>
                <script>
                    var down = document.getElementById("notifications");
                    var x = document.querySelector('.exit_button');
                    x.addEventListener('click', function () {
                        var x1 = document.querySelector('.notifications');
                        x1.style.display = "none";
                    });
                </script>
            }
        </div>
    </div>
</body>
</html>
