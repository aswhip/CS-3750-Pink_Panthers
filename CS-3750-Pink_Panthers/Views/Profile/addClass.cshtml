@model Pink_Panthers_Project.Models.Class

@{
    ViewData["Title"] = "Add Class";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="addClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewData.ModelState.ContainsKey("NoDaysSelected"))
            {
                <em>Select at least one day</em>
                <br />
                <br />
            }
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentCode" class="control-label">Department Code</label>
                <select asp-for="DepartmentCode" class="form-control">
                    <option value="CS">CS</option>
                    <option value="BTNY">BTNY</option>
                    <option value="CHEM">CHEM</option>
                    <option value="ECE">ECE</option>
                    <option value="ATHL">ATHL</option>
                    <option value="MUSC">MUSC</option>
                    <option value="COMM">COMM</option>
                </select>
                <span asp-validation-for="DepartmentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseNumber" class="control-label">Course Number</label>
                <input asp-for="CourseNumber" class="form-control" />
                <span asp-validation-for="CourseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label">Course Name</label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" >Monday&emsp;</label>
                <label class="control-label">Tuesday&emsp;</label>
                <label class="control-label">Wednesday&emsp;</label>
                <label class="control-label">Thursday&emsp;</label>
                <label class="control-label">Friday</label>
                <br />
                <div>
                    <pre>
   @Html.CheckBoxFor(m => m.monday)         @Html.CheckBoxFor(m => m.tuesday)          @Html.CheckBoxFor(m => m.wednesday)          @Html.CheckBoxFor(m => m.thursday)        @Html.CheckBoxFor(m => m.friday)</pre>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">End Time</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hours" class="control-label">Credit Hours</label>
                <select asp-for="hours" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Class" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
