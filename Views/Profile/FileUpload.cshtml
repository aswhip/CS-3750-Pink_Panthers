@{
    ViewData["Title"] = "FileUpload";
}
<h2>File Upload</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="FileUpload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one file:</p>
            <input type="file" name="files" @*multiple*@ />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>